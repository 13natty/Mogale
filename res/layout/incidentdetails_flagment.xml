<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFBB00" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/abc_ab_bottom_solid_dark_holo" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/imageView1" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TableRow
                android:id="@+id/tableRow0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/reporterName_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reporter Name :" />

                <TextView
                    android:id="@+id/reporterName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thabo" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/reporterSurname_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reporter Surname :" />

                <TextView
                    android:id="@+id/reporterSurname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mathebula" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/assigneeName_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assignee Name :" />

                <TextView
                    android:id="@+id/assigneeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sipho" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/assigneeSurname_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assignee Surname :" />

                <TextView
                    android:id="@+id/assigneeSurname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dlamini" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/accountNumber_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account Number :" />

                <TextView
                    android:id="@+id/accountNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="128652324" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/area_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Area :" />

                <TextView
                    android:id="@+id/area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Soweto" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/address_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address :" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="793 Missouri Crescent, Zondi" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/zone_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zone :" />

                <TextView
                    android:id="@+id/zone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/reporterIdNumber_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reporter IdNumber :" />

                <TextView
                    android:id="@+id/reporterIdNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5625564841232" />
            </TableRow>
            
            <TableRow
                android:id="@+id/tableRow9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/reporterContact_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reporter Contact :" />

                <TextView
                    android:id="@+id/reporterContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05245685456" />
            </TableRow>
            
        </TableLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:text="Accept" />

    <Button
        android:id="@+id/button_decline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@+id/imageView1"
        android:text="Decline" />

</RelativeLayout>