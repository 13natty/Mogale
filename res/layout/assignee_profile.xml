<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp" >

    <TextView
        android:id="@+id/assignee_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/assignee_imageView"
        android:layout_marginBottom="18dp"
        android:layout_toRightOf="@+id/assignee_imageView"
        android:text="Assignee Profile"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/assignee_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/assignee_name"
        android:layout_below="@+id/assignee_name"
        android:text="Surname : " />

    <TextView
        android:id="@+id/assignee_employeeNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/assignee_surname"
        android:layout_below="@+id/assignee_surname"
        android:text="EmployeeNum : " />

    <TextView
        android:id="@+id/assignee_designation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/assignee_employeeNum"
        android:layout_below="@+id/assignee_employeeNum"
        android:text="Designation : " />

    <TextView
        android:id="@+id/assignee_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/assignee_designation"
        android:layout_below="@+id/assignee_designation"
        android:text="Email : " />

    <TextView
        android:id="@+id/assignee_cellphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/assignee_email"
        android:layout_below="@+id/assignee_email"
        android:text="Cellphone : " />

    <TextView
        android:id="@+id/assignee_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/assignee_cellphone"
        android:layout_below="@+id/assignee_cellphone"
        android:text="Active : " />

    <ImageView
        android:id="@+id/assignee_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/assignee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/assignee_imageView"
        android:text="Name : " />

</RelativeLayout>
